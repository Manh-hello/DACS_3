<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavTextStyle">
        <item name="android:textSize">11sp</item>
        <item name="android:paddingTop">10dp</item>
    </style>
    <style name="CustomBottomNav" parent="Widget.Material3.BottomNavigationView">
        <item name="itemActiveIndicatorStyle">@style/CustomIndicator</item>
    </style>

    <style name="CustomIndicator">
        <item name="android:height">40dp</item>
        <item name="android:width">80dp</item>
        <item name="shapeAppearance">@style/RoundedCorners</item>
        <item name="android:colorBackground">@color/blue</item>
    </style>

    <style name="RoundedCorners" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
    <style name="dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>
    <style name="CustomRatingBar" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlActivated">#FDD835</item>
        <item name="android:progressTint">#FDD835</item>
    </style>

</resources>